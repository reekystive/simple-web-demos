{
  "name": "@monorepo/app-storybook",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "build": "pnpm run tsc:build && storybook build",
    "dev": "storybook dev --no-open --port 6009",
    "lint:eslint": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "preview": "vite preview --outDir storybook-static",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch",
    "tsc:build": "tsc --build tsconfig.json",
    "tsc:build:clean": "tsc --build tsconfig.json --clean",
    "tsc:build:depsOnly": "pnpm --filter '{.}...' --workspace-concurrency=-2 run tsc:build",
    "tsc:build:watch": "tsc --build tsconfig.json --watch"
  },
  "dependencies": {
    "@dicebear/collection": "catalog:",
    "@dicebear/core": "catalog:",
    "@faker-js/faker": "catalog:",
    "@monorepo/tailwindcss": "workspace:^",
    "@monorepo/utils": "workspace:^",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-slider": "catalog:",
    "@react-hookz/web": "catalog:",
    "es-toolkit": "catalog:",
    "figma-squircle": "catalog:",
    "lucide-react": "catalog:",
    "motion": "catalog:",
    "nanoid": "catalog:",
    "radix-ui": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-scan": "catalog:",
    "react-usestateref": "catalog:",
    "sonner": "catalog:",
    "usehooks-ts": "catalog:",
    "vaul": "catalog:"
  },
  "devDependencies": {
    "@monorepo/app-types": "workspace:^",
    "@monorepo/tsconfig": "workspace:^",
    "@storybook/addon-docs": "catalog:",
    "@storybook/builder-vite": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@types/mdx": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "csstype": "catalog:",
    "storybook": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
