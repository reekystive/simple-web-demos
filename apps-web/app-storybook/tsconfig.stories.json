{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@monorepo/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "types": ["@monorepo/app-types/vite", "@types/mdx"],
    "rootDir": ".",
    "outDir": "./node_modules/.cache/tsc-stories",
    "tsBuildInfoFile": "./node_modules/.cache/tsc-stories/tsconfig.stories.tsbuildinfo",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/",
    "./.storybook/preview.tsx",
    "./.storybook/theme.tsx",
    "./.storybook/manager.tsx",
    "./.storybook/preview-utils/",
    "./.storybook/preview-docs/"
  ],
  "exclude": ["**/__tests__/"],
  "references": [
    {
      "path": "../../packages/utils/tsconfig.json"
    }
  ]
}
