{
  "name": "@monorepo/utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": null
    }
  },
  "scripts": {
    "build": "pnpm run tsc:build",
    "tsc:build": "tsc --build tsconfig.json",
    "tsc:build:watch": "tsc --build tsconfig.json --watch",
    "tsc:build:clean": "tsc --build tsconfig.json --clean",
    "tsc:build:depsOnly": "pnpm --filter '{.}...' --workspace-concurrency=-2 run tsc:build",
    "lint:eslint": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@faker-js/faker": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "tailwind-merge": "catalog:"
  },
  "devDependencies": {
    "@monorepo/tsconfig": "workspace:^",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
