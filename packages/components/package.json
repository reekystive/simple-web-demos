{
  "name": "@monorepo/components",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": null
    }
  },
  "scripts": {
    "build": "tsc --build tsconfig.web.json",
    "build:storybook": "pnpm run lint:tsc && storybook build",
    "dev": "storybook dev --no-open --port 6009",
    "lint:eslint": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "lint:tsc": "tsc --build tsconfig.json --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@monorepo/tailwindcss": "workspace:*",
    "@monorepo/utils": "workspace:*",
    "motion": "catalog:",
    "react-scan": "catalog:",
    "usehooks-ts": "catalog:"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "catalog:",
    "@monorepo/tsconfig": "workspace:^",
    "@storybook/builder-vite": "catalog:storybook9",
    "@storybook/react-vite": "catalog:storybook9",
    "@tailwindcss/vite": "catalog:tailwindcss4",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react-swc": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "storybook": "catalog:storybook9",
    "typescript": "catalog:",
    "unplugin-dts": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
