{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@monorepo/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "types": ["node"],
    "rootDir": ".",
    "outDir": "./node_modules/.cache/tsc-src",
    "tsBuildInfoFile": "./node_modules/.cache/tsc-src/tsconfig.src.tsbuildinfo",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/",
    "./.storybook/preview.tsx",
    "./.storybook/theme.tsx",
    "./.storybook/manager.tsx",
    "./.storybook/preview-utils/",
    "./.storybook/preview-docs/"
  ],
  "exclude": ["**/__tests__/"],
  "references": [
    {
      "path": "../../packages/utils/tsconfig.json"
    }
  ]
}
