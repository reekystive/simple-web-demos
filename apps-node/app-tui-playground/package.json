{
  "name": "@monorepo/app-tui-playground",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "build": "pnpm run tsc:build",
    "imessage-kit-demo": "tsx --tsconfig tsconfig.src.json src/apps/imessage-kit-demo/index.ts",
    "lint:eslint": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch",
    "tsc:build": "tsgo --build tsconfig.json",
    "tsc:build:clean": "tsgo --build tsconfig.json --clean",
    "tsc:build:upstream": "pnpm --filter '{.}...' --workspace-concurrency=-2 run tsc:build",
    "tsc:build:watch": "tsgo --build tsconfig.json --watch"
  },
  "dependencies": {
    "@monorepo/utils": "workspace:^",
    "@photon-ai/imessage-kit": "catalog:",
    "date-fns": "catalog:",
    "es-toolkit": "catalog:",
    "ink": "catalog:",
    "react": "catalog:",
    "tsx": "catalog:",
    "zx": "catalog:"
  },
  "devDependencies": {
    "@monorepo/tsconfig": "workspace:^",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@typescript/native-preview": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
