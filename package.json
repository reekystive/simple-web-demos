{
  "name": "simple-web-demos",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore . --write",
    "format:check": "prettier --ignore-path .gitignore --ignore-path .prettierignore . --check",
    "lint:eslint:packages": "pnpm --filter '*' --workspace-concurrency=-2 run lint:eslint",
    "lint:eslint:root": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "prepare": "husky",
    "sort-package-json:check": "sort-package-json '**/package.json' --ignore '**/node_modules/' --check",
    "sort-package-json:sort": "sort-package-json '**/package.json' --ignore '**/node_modules/'",
    "test:packages": "pnpm --filter '*' --workspace-concurrency=-2 run test",
    "test:update:packages": "pnpm --filter '*' --workspace-concurrency=-2 run test:update",
    "tsc:build:packages": "pnpm --filter '*' --workspace-concurrency=-2 run tsc:build",
    "tsc:build:root": "tsgo --build tsconfig.json"
  },
